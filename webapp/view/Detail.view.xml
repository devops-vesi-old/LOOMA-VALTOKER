<mvc:View 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"	
	xmlns:fb="sap.ui.comp.filterbar"	
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	controllerName="com.vesi.zfioac4_valpec.controller.Detail">
	<semantic:SemanticPage>
		<!-- Title Heading-->
		<semantic:titleHeading>
			<HBox>
				<Title 
					class="sapUiSmallMarginEnd"
					text="{mSite>/SiteName}"/>
				<Text 
					class="sapUiSmallMarginEnd"
					text="{mSite>/TypeDesc}"/>
				<Text 
					class="sapUiSmallMarginEnd"
					text="({mSite>/SiteId})"/>
				<!--<core:Icon-->
			</HBox>

		</semantic:titleHeading>
		<!-- Header Expanded -->
		<semantic:titleExpandedContent>
			<core:Fragment 
				fragmentName="com.vesi.zfioac4_valpec.view.fragment.Detail.TitleExpandedContent" 
				type="XML"/>
		</semantic:titleExpandedContent>
		<!-- Header Content -->
		<semantic:headerContent>
			<core:Fragment 
				fragmentName="com.vesi.zfioac4_valpec.view.fragment.Detail.FilterBar" 
				type="XML"/>
		</semantic:headerContent>
		<semantic:content>
			<l:Splitter height="100%" orientation="Vertical">
				<l:Splitter>
					<l:layoutData>
						<l:SplitterLayoutData size="50%"/>
					</l:layoutData>
					<l:contentAreas>
						<core:Fragment 
							fragmentName="com.vesi.zfioac4_valpec.view.fragment.Detail.TreeTable" 
							type="XML"/>
					</l:contentAreas>
				</l:Splitter>
				<l:Splitter>
					<l:layoutData>
						<l:SplitterLayoutData size="auto"/>
					</l:layoutData>
					<l:contentAreas>
						<core:Fragment 
							fragmentName="com.vesi.zfioac4_valpec.view.fragment.Detail.EquipmentTable" 
							type="XML"/>
					</l:contentAreas>
				</l:Splitter>
			</l:Splitter>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>