<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:t="sap.ui.table">
	<ResponsivePopover
		id="ModifiedInfoPopover"
		class="sapUiContentPadding customPopoverModified"
		horizontalScrolling="false"
		showHeader="false"
		placement="Left" >
		<content>
			<Table 
				id="ModifiedInfoTable" 
				items="{mModifiedInfo>/}">
				<columns>
					<Column 
						hAlign="Begin" 
						width="30%">
						<Label text="{i18n>ModifiedInfoTblColHdrDescription}"/>
					</Column>
					<Column 
						hAlign="Begin" 
						width="35%">
						<Label text="{i18n>ModifiedInfoTblColHdrValueOld}"/>
					</Column>
					<Column 
						hAlign="Begin" 
						width="35%">
						<Label text="{i18n>ModifiedInfoTblColHdrValueNew}"/>
					</Column>					
				</columns>
				<items>
					<ColumnListItem>
						<cells>
						<Text text="{= ${mModifiedInfo>IsProperty} ? ${path:'mModifiedInfo>FieldI18n', formatter:'.formatter.setPropertyDescription'} : ${mModifiedInfo>FieldDesc}}"/>
						<ObjectStatus 
							class="sapUiSmallMarginBottom"
							text="{mModifiedInfo>ValueOldDesc}"
							icon="sap-icon://decline"
							state="Error"/>	
						<ObjectStatus 
							class="sapUiSmallMarginBottom"
							text="{mModifiedInfo>ValueNewDesc}"
							icon="sap-icon://accept"
							state="Success"/>							
					</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>