<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <SelectDialog
        id="idEquipAmdecCriticityDialog"
        noDataText="{i18n>noDataFound}"
        items="{
            path: 'mVH>/AmdecCriticity',
            templateShareable: true
        }"
        search="onAmdecSelectDialogSearch"
        confirm="onAmdecVhSelectDialogConfirm($event, 'AmdecCriticityId')"
        cancel="onValueHelpClose"
    >
        <StandardListItem title="{mVH>ValueId} - {mVH>ValueDesc}" />
    </SelectDialog>
</c:FragmentDefinition>