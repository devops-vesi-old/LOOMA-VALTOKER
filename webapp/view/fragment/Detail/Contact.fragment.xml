<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:f="sap.f">
	<ScrollContainer
		class="sapUiNoContentPadding"
		height="14rem"
		horizontal="false"
		vertical="true">
		<f:GridContainer 
			class="sapUiSmallMargin"
			items="{mSite>/SiteContact}"
			snapToRow="true">
			<f:layout>
				<f:GridContainerSettings rowSize="2rem" columnSize="2rem" gap="0.5rem"/>
			</f:layout>
			<f:layoutXS>
				<f:GridContainerSettings rowSize="1.5rem" columnSize="1.5rem" gap="0.5rem"/>
			</f:layoutXS>
			<f:items>
				<QuickViewCard>
					<layoutData>
						<f:GridContainerItemLayoutData rows="5" columns="8" />
					</layoutData>			
					<QuickViewPage 
						title="{mSite>ContactLastName} {mSite>ContactFirstName}"
						description="{mSite>ContactId}">
						<QuickViewGroup>
							<QuickViewGroupElement 
							label="{i18n>QuickViewGroupElementLblPhone}"
							type="phone"
							value="{mSite>ContactPhone}"/>
							<QuickViewGroupElement 
							label="{i18n>QuickViewGroupElementLblEmail}"
							type="email"
							value="{mSite>ContactEmail}"/>							
						</QuickViewGroup>
					</QuickViewPage>
				</QuickViewCard>
			</f:items>
		</f:GridContainer>
	</ScrollContainer>	
</core:FragmentDefinition>