<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="idVhCharacteristicSetSelectDialog"
        noDataText="{i18n>noDataFound}"
        title="{i18n>charactColumnHeaderCharactName}"
        search="onCharacteristicValueHelpSearch"
        confirm="onCharacteristicValueHelpConfirm"
        cancel="onValueHelpClose"
        items="{
            path: 'EquipmentSiteModel>/VH_CharacteristicSet',
            templateShareable: true
        }"
    >
        <StandardListItem title="{EquipmentSiteModel>DescriptionValue}" />
    </SelectDialog>
</core:FragmentDefinition>