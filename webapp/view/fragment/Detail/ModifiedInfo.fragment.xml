<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover 
		id="ModifiedInfoPopover" 
		placement="Left" 
		showHeader="false">
		<VBox>
			<Panel width="100%" visible="{mModifiedInfo>/bDisplayModifiedInfoProperty}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>TitleModifiedInfoProperty}"/>
					</OverflowToolbar>
				</headerToolbar>
				<content>
					<VBox  items="{mModifiedInfo>/ModifiedInfoProperty}">
						<HBox alignItems="Start">
							<HBox width="13rem">
								<Text text="{= ${mModifiedInfo>IsProperty} ? ${path:'mModifiedInfo>FieldI18n', formatter:'.formatter.setPropertyDescription'} : ${mModifiedInfo>FieldDesc}}"/>
							</HBox>
							<HBox width="0.5rem">
								<Text text=":"/>
							</HBox>
							<HBox width="20rem">
								<ObjectStatus 
									text="{mModifiedInfo>ValueOldDesc}"
									icon="sap-icon://decline"
									state="Error"/>	
							</HBox>
							<HBox width="20rem">
								<ObjectStatus 
								text="{mModifiedInfo>ValueNewDesc}"
								icon="sap-icon://accept"
								state="Success"/>
							</HBox>
						</HBox>
					</VBox>
				</content>
			</Panel>
			<Panel width="100%" visible="{mModifiedInfo>/bDisplayModifiedInfofamilyCharact}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>TitleModifiedInfoFamilyCharact}"/>
					</OverflowToolbar>
				</headerToolbar>
				<content>
					<VBox  items="{mModifiedInfo>/ModifiedInfoFamilyCharact}">
						<HBox alignItems="Start">
							<HBox width="13rem">
								<Text 
									text="{= ${mModifiedInfo>IsProperty} ? ${path:'mModifiedInfo>FieldI18n', formatter:'.formatter.setPropertyDescription'} : ${mModifiedInfo>FieldDesc}}"
									visible="{= ${mModifiedInfo>bHideDescription} !== true}"/>
							</HBox>
							<HBox width="0.5rem">
								<Text 
									text=":" 
									visible="{= ${mModifiedInfo>bHideDescription} !== true}"/>
							</HBox>
							<HBox width="20rem">
								<ObjectStatus 
									text="{mModifiedInfo>ValueOldDesc}"
									icon="sap-icon://decline"
									state="Error"/>	
							</HBox>
							<HBox width="20rem">
								<ObjectStatus 
								text="{mModifiedInfo>ValueNewDesc}"
								icon="sap-icon://accept"
								state="Success"/>
							</HBox>
						</HBox>
					</VBox>
				</content>
			</Panel>
		</VBox>
	</Popover>
</core:FragmentDefinition>