<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core">
	<Popover 
		id="FamilyCharactPopover" 
		placement="Left" 
		showHeader="false">
		<Panel width="100%">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="{i18n>TitleOtherProperties}"/>
				</OverflowToolbar>
			</headerToolbar>
			<content>
				<VBox  items="{mDisplayPopover>/OtherProperties}">
					<HBox alignItems="Start">
						<HBox width="13rem">
							<ObjectStatus 
								text="{mDisplayPopover>label}"
								state="{= ${mDisplayPopover>valueToDisplay} === '' ? 'None' : 'Success'}"/>
						</HBox>
						<Text 
							text=":" 
							width="0.5rem"/>
						<Text text="{mDisplayPopover>valueToDisplay}"/>
					</HBox>
				</VBox>
			</content>
		</Panel>
	</Popover>
</core:FragmentDefinition>