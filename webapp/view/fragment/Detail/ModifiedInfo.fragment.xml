<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:t="sap.ui.table">
	<ResponsivePopover
		id="ModifiedInfoPopover"
		class="sapUiContentPadding"
		horizontalScrolling="false"
		showHeader="false"
		placement="Left" >
		<!--<endButton>-->
		<!--	<Button text="{i18n>ModifiedInfoPopoverBtnClose}" press="onClosePopoverPress" />-->
		<!--</endButton>-->
		<content>
			<Table 
				id="ModifiedInfoTable" 
				items="{mModifiedInfo>/}">
				<columns>
					<Column 
						hAlign="Begin" 
						width="15%">
						<Label text="{i18n>ModifiedInfoTblColHdrFieldId}"/>
					</Column>	
					<Column 
						hAlign="Begin" 
						width="35%">
						<Label text="{i18n>ModifiedInfoTblColHdrCharactDesc}"/>
					</Column>
					<Column 
						hAlign="Begin" 
						width="25%">
						<Label text="{i18n>ModifiedInfoTblColHdrValueOld}"/>
					</Column>
					<Column 
						hAlign="Begin" 
						width="25%">
						<Label text="{i18n>ModifiedInfoTblColHdrValueNew}"/>
					</Column>					
				</columns>
				<items>
					<ColumnListItem>
						<cells>
						<Text text="{mModifiedInfo>FieldId}"/>
						<Text text="{= ${mModifiedInfo>IsProperty} ? ${mModifiedInfo>FieldI18n} : ${mModifiedInfo>FieldDesc}}"/>
						<ObjectStatus 
							class="sapUiSmallMarginBottom"
							text="{mModifiedInfo>ValueOld}"
							icon="sap-icon://decline"
							state="Error"/>	
						<ObjectStatus 
							class="sapUiSmallMarginBottom"
							text="{mModifiedInfo>ValueNew}"
							icon="sap-icon://accept"
							state="Success"/>							
					</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>