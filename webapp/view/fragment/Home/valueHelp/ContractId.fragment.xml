<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog id="ContractIdDialog" 
		title="{i18n>TableSelectDialogTitleContract}"	
		noDataText="{i18n>noDataFound}" 
		multiSelect="true"
		rememberSelections="true"
		search="onValueHelpSearch" 
		confirm="onValueHelpConfirm" 
		cancel="onValueHelpClose" 
		items="{path : 'VH>/ContractSet'}">
		<columns>
			<Column width="3rem">
				<header>
					<Text text="{i18n>VHContractDialogColumnHeaderContractId}"/>
				</header>
			</Column>
			<Column width="8rem">
				<header>
					<Text text="{i18n>VHContractDialogColumnHeaderContractName}"/>
				</header>
			</Column>
			<Column width="3rem">
				<header>
					<Text text="{i18n>VHContractDialogColumnHeaderIsActive}"/>
				</header>
			</Column>			
		</columns>
		<ColumnListItem selected="{parts:['VH>ContractId','mTokens>/ContractId'], formatter:'.formatter.setVHSelectedItem'}">
			<cells>
				<Text text="{VH>ContractId}"/>
				<Text text="{VH>ContractName}"/>
				<core:Icon 
					src="{= ${VH>IsActive} ? 'sap-icon://accept' : 'sap-icon://decline' }"
					color="{= ${VH>IsActive} ? 'Positive' : 'Negative' }" 
					tooltip="{= ${VH>IsActive} ? ${i18n>yes} : ${i18n>no} }"/>
			</cells>
		</ColumnListItem>
	</TableSelectDialog>
</core:FragmentDefinition>